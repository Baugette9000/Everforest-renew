    "custom/playerctl": {
      "format": "Ô¢Ü {icon}",
      "return-type": "json",
      "max-length": 64,
      "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
      "on-click-middle": "playerctl play-pause",
      "on-click": "playerctl previous",
      "on-click-right": "playerctl next",
      "format-icons": {
        "Playing": "<span foreground='#E5B9C6'>Û∞íÆ Û∞êå  Û∞í≠</span>",
        "Paused": "<span foreground='#928374'>Û∞íÆ Û∞è•  Û∞í≠</span>"
      },
    },

    "custom/playerlabel": {
      "format": "Ô¢Ü <span>{}</span>",
      "return-type": "json",
      "min-length": 60,
      "max-length": 80,
      "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
      "on-click-middle": "playerctl play-pause",
      "on-click": "playerctl previous",
