    "custom/updater": {
      "interval": false,
      "format": " ÔÜá{icon} ",
      "return-type": "bash",
      "max-length": 48,
      "exec": "bash $HOME/.config/waybar/scripts/updaterinfo.sh",
      "on-click": "bash $HOME/.config/waybar/scripts/updater.sh"
